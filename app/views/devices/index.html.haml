%h1 Your Devices

%table.table.table-condensed
  %tr
    %th Sim
    %th Model number
    %th Name
    %th Imei
    %th Description
    %th
    %th
    %th

  - @devices.each do |device|
    %tr
      %td 
        - if sim = device.sim
          = link_to(image_tag("sim_icon.png", height: 20), sim_path(sim))
      %td= device.model_number
      %td= device.name
      %td= device.imei
      %td= device.description
      %td= link_to 'Show', device
      %td= link_to 'Edit', edit_device_path(device)
      %td= link_to 'Destroy', device, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Device', new_device_path
