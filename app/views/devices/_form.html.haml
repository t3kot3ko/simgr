= form_for @device do |f|
  - if @device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
      %ul
        - @device.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sim_id
    = f.number_field :sim_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :model_number
    = f.text_field :model_number
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :imei
    = f.text_field :imei
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
