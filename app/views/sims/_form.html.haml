= form_for @sim do |f|
  - if @sim.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sim.errors.count, "error")} prohibited this sim from being saved:"
      %ul
        - @sim.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :carrior
    = f.text_field :carrior
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :valid
    = f.text_field :valid
  .field
    = f.label :registered_at
    = f.date_select :registered_at
  .field
    = f.label :imsi
    = f.text_field :imsi
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
